<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context="com.example.asus.oralhealth.Analyze2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:textSize="@dimen/fontSize"
            android:textStyle="bold"
            android:padding="3dp"
            android:drawablePadding="@dimen/activity_horizontal_margin"
            android:drawableLeft="@drawable/homesmall"
            android:background="@color/pink"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/label"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/back"
                android:textSize="@dimen/fontSize"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:text="@string/done"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/fontSize"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Analytical Result"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/room_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fontSize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fontSize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/school_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fontSize"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/data_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/main_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:background="#ffffff"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


            </TableRow>

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/label">

                <TextView
                    android:id="@+id/patient_label"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="PATIENT ID"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/sex_label"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="GENDER"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/name_label"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="NAME"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/examiner_label"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="EXAMINER"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/riskValue_label"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="RISK"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/risk_label"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="DMFT"
                    android:textColor="#000000" />
            </TableRow>
        </TableLayout>
    </ScrollView>
    <TextView
        android:id="@+id/testView"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/blacklight"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
